{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/data/*": ["./src/data/*"],
      "@/db-collections": ["./src/db/collections"],
      "@/lighter/*": ["./lighter-sdk-ts/*"],
      "@/server/*": ["./src/server/*"],
      "@/shared/*": ["./src/core/shared/*"],
      "@/lib/*": ["./src/core/lib/*"],
      "@/utils/*": ["./src/core/utils/*"],
      "@/*": ["./src/*"]
    }
  }
}
